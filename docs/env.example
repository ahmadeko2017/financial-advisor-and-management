# Environment example (dev)
APP_ENV=development
APP_PORT=8000

# Database (match docker-compose)
POSTGRES_DB=fintrack
POSTGRES_USER=finuser
POSTGRES_PASSWORD=finpass
DATABASE_URL=postgresql+psycopg2://finuser:finpass@fintrack-db:5432/fintrack

# Redis (Celery/Cache)
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET=changeme
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Seed demo data (user demo@example.com / secret123)
SEED_DEMO_DATA=true

# Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=fintrack-dev
S3_ACCESS_KEY=changeme
S3_SECRET_KEY=changeme

# AI/ML (optional)
CATEGORY_MODEL_PATH=./models/category.pkl
LLM_ENDPOINT=http://localhost:11434

# OCR (optional)
OCR_ENDPOINT=http://localhost:7000
